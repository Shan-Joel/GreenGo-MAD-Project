<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AFD7C0"
    tools:context=".CreateShoppingList">

    <TableLayout
        android:id="@+id/addOrderTable"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/catTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/itembackground"
                android:gravity="center"
                android:text="Category"
                android:textColor="@color/Black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/quantityTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/itembackground"
                android:gravity="center"
                android:text="Quantity"
                android:textColor="@color/Black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/unitTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/itembackground"
                android:gravity="center"
                android:text="Unit"
                android:textColor="@color/Black"
                android:textSize="20dp" />


        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/addMoreItem"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:background="#1C7A45"
                android:text="Add More Item"
                android:textSize="24dp"
                app:backgroundTint="#25B564" />


        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/submit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:background="#EF0505"
                android:text="Submit"
                android:textSize="24dp"
                app:backgroundTint="#EF0505" />


        </TableRow>
    </TableLayout>


</ScrollView>